
body
    margin-bottom: 2em !important


a
    color: inherit
    text-decoration: none
    &:hover
        cursor: pointer
        background-color: black
        color: white


button, .button
    font-size: S
    background-color: white
    border-radius: 2em
    border: 1px solid black
    padding: 0.5em 1em
    text-transform: uppercase
    &:hover
        cursor: pointer
        background-color: black
        color: white

base-border = 1px solid black
thick-border = 2px solid black



//
// colors
//
dark = #333
color1 = #FFE653
color2 = #0691D4


//
// type
//

sans-serif-font = Lato, sans-serif
serif-font = Merriweather, serif

scale = 1.5
M = 16px
S = M / scale
L = scale * M
XL = scale * scale * M
XXL = scale * scale * scale * M

body
    font-size: M
    font-family: sans-serif-font
    line-height: 1.4

h1, h2, h3, h4
    line-height: 1.2
    font-family: sans-serif-font


h1
    font-size: XL
h2
    font-size: L
    margin: 1em 0 0.5em 0 !important
h3
    font-size: M


.container
    padding:  0 1em

main
    margin-top: 2em !important

@media (min-width: 40em)
    .container
        width: 35em
        margin: 0 auto

    h1
        font-size: XXL

    h2
        font-size: XL

    h3
        font-size: L

    h4
        font-size: M




